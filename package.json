{
  "name": "prompt-helper",
  "version": "1.1.0",
  "description": "可以积累和复用的提词器工具",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "electron": "nodemon --watch src/main --exec electron .",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "electron-builder --dir",
    "icons": "node scripts/generate-icons.js",
    "dist": "npm run icons && vite build && electron-builder",
    "dist:win32": "npm run icons && vite build && electron-builder --win --ia32",
    "dist:win64": "npm run icons && vite build && electron-builder --win --x64",
    "dist:mac": "npm run icons && vite build && electron-builder --mac",
    "dist:all": "npm run icons && vite build && electron-builder -mw"
  },
  "keywords": [
    "electron",
    "vue",
    "prompt-tool"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.7.9",
    "codemirror": "^5.65.18",
    "lowdb": "^7.0.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "element-plus": "^2.9.3",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/compiler-sfc": "^3.5.13",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^25.1.8",
    "less": "^4.2.0",
    "nodemon": "^3.1.9",
    "png2icons": "^2.0.1",
    "terser": "^5.37.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.promptwordtool.app",
    "productName": "PromptHelper",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "icon.*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.productivity",
      "darkModeSupport": true,
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "resources/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "portable": {
      "splashImage": "resources/icon.png",
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "提示宝",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "differentialPackage": true,
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}"
    },
    "asar": {
      "smartUnpack": true
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  }
}
